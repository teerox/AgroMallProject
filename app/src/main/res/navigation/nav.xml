<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.agromallapplication.screens.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_loginFragment_to_dashBoardFragment2"
            app:destination="@id/dashBoardFragment2" />
    </fragment>
    <fragment
        android:id="@+id/dashBoardFragment2"
        android:name="com.example.agromallapplication.screens.DashBoardFragment"
        android:label="fragment_dash_board"
        tools:layout="@layout/fragment_dash_board" >
        <action
            android:id="@+id/action_dashBoardFragment2_to_capturingFragment"
            app:destination="@id/capturingFragment" />
        <action
            android:id="@+id/action_dashBoardFragment2_to_singleFarmerFragment"
            app:destination="@id/singleFarmerFragment" />
    </fragment>
    <fragment
        android:id="@+id/capturingFragment"
        android:name="com.example.agromallapplication.screens.CapturingFragment"
        android:label="CapturingFragment"
        tools:layout="@layout/fragment_capturing"
        >
        <action
            android:id="@+id/action_capturingFragment_to_farmCapturingFragment"
            app:destination="@id/farmCapturingFragment" />
    </fragment>
    <fragment
        android:id="@+id/farmCapturingFragment"
        android:name="com.example.agromallapplication.screens.FarmCapturingFragment"
        android:label="FarmCapturingFragment"
        tools:layout="@layout/fragment_farm_capturing">
        <action
            android:id="@+id/action_farmCapturingFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
        <argument
            android:name="farmerInfo"
            app:argType="com.example.agromallapplication.models.Farmer" />
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.agromallapplication.screens.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" >
        <action
            android:id="@+id/action_mapFragment_to_dashBoardFragment2"
            app:destination="@id/dashBoardFragment2" />
        <argument
            android:name="completeFarmInfo"
            app:argType="com.example.agromallapplication.models.Farmer" />
    </fragment>
    <fragment
        android:id="@+id/singleFarmerFragment"
        android:name="com.example.agromallapplication.screens.SingleFarmerFragment"
        android:label="SingleFarmerFragment"
        tools:layout="@layout/fragment_single_farmer"/>
</navigation>